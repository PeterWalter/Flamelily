<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
                  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"                  
                  xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
                  prism:ViewModelLocator.AutowireViewModel="True" 
                  Title="{Binding Title}"
                x:Class="flamelily.Views.ControlPage">

    <MasterDetailPage.Master >
        <NavigationPage Title="The Main Menu">
            <x:Arguments>
                <ContentPage Title="Menu">
                    <StackLayout Padding="20">
                        <!-- TODO: // Update the Layout and add some real menu items  -->
                        <Button Text="About Flamelily" Command="{Binding TheNavigateCommand}" CommandParameter="NavigationPage/AboutPage" />
                    </StackLayout>
                </ContentPage>
            </x:Arguments>
        </NavigationPage>
    </MasterDetailPage.Master>
    
</MasterDetailPage>